generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  MERCHANDISER
  RETAILER
}

model User {
  id        String   @id @default(cuid())
  name      String
  phone     String   @unique
  role      UserRole
  shopName  String?
  address   String?
  createdAt DateTime @default(now())
}
